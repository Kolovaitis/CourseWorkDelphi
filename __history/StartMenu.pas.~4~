unit StartMenu;

interface

uses
   System.SysUtils, System.Types, System.UITypes, System.Classes,
   System.Variants,
   FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs, FMX.ListBox,
   FMX.Controls.Presentation, FMX.StdCtrls, Main;

type
   TFormStart = class(TForm)
    ComboBoxLevelSelection: TComboBox;
    ButtonStart: TButton;
      procedure ButtonStartClick(Sender: TObject);
   private

   public const
      Level: array [0 .. 3, 1 .. 2] of Integer = ((2, 2), (3, 2),
        (2, 4), (3, 4));
   end;

var
   FormStart: TFormStart;
   MainForm: TFormMain;
implementation

{$R *.fmx}

procedure TFormStart.ButtonStartClick(Sender: TObject);

var

   Index: Integer;
begin
   Index := ComboBoxLevelSelection.ItemIndex;
   if(MainForm <> nil)then
   MainForm.Destroy;
   MainForm := TFormMain.Create(Self, Level[Index, 1], Level[Index, 2], 1);
   MainForm.ShowModal;
end;

end.
